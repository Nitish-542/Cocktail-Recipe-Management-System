@model CRM.ViewModels.CocktailViewModel

<h1>Create New Cocktail</h1>

<form method="post" asp-action="Create">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="DrinkName"></label>
        <input asp-for="DrinkName" class="form-control" />
        <span asp-validation-for="DrinkName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DrinkRecipe"></label>
        <input asp-for="DrinkRecipe" class="form-control" />
        <span asp-validation-for="DrinkRecipe" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LiqIns"></label>
        <input asp-for="LiqIns" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MixIns"></label>
        <input asp-for="MixIns" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BartenderId">Bartender</label>
        <select asp-for="BartenderId" asp-items="@(new SelectList(Model.Bartenders, "BartenderId", "FirstName"))" class="form-control">
            <option value="">-- Select Bartender --</option>
        </select>
        <span asp-validation-for="BartenderId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "CategoryId", "CategoryName"))" class="form-control">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DatePosted"></label>
        <input asp-for="DatePosted" class="form-control" type="datetime-local" />
    </div>

    <button type="submit" class="btn btn-primary">Create Cocktail</button>
</form>

<a href="@Url.Action("List", "CocktailPage")" class="btn btn-secondary">Back to List</a>
